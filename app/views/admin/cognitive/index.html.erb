<%# html form for the interface %>

<div>
  <form enctype="multipart/form-data" name="upload" action="cognitive/upload" method="POST" >

    <input name="uploadfile" type="file" multiple>
    <p>Drag your files here or click in this area.</p>
    <button type="submit" id="submit_txt" >Get text</button>
    
    <div>
          <select name="position" class="form-control pointer required" id="language">
              <option value="nil">--- Select ---</option>
              <option value="en-Us">English</option>
              <option value="fr-Fr">French</option>
          </select>
    </div>
  </form>

</div>





